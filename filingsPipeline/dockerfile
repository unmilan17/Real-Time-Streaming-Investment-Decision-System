# Use Python 3.12 slim base image for smaller footprint
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libxml2-dev \
    libxslt-dev \
    zlib1g-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first to enable layer caching
COPY requirements.txt .

RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Remove build dependencies
RUN apt-get purge -y --auto-remove gcc g++ build-essential \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -s /bin/bash appuser

# Make directories
RUN mkdir -p /app/data /app/cache /app/logs && \
    chown -R appuser:appuser /app

# Copy app code
COPY --chown=appuser:appuser logging_config.py .
COPY --chown=appuser:appuser sec_filings.py .
COPY --chown=appuser:appuser data/ ./data/

USER appuser

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python3 -c "from pymongo import MongoClient; MongoClient('${MONGODB_URI}', serverSelectionTimeoutMS=5000).admin.command('ping')" || exit 1

ENTRYPOINT ["python3", "sec_filings.py"]
CMD ["--daemon"]
